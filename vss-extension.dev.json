{
  "$schema": "http://json.schemastore.org/vss-extension",
  "manifestVersion": 1,
  "baseUri": "https://localhost:3000",
  "public": false,
  "id": "acceptance-criterias-dev",
  "name": "Acceptance Criterias - DEV",
  "publisher": "JoachimDalen",
  "version": "0.0.15",
  "description": "An extension to manage acceptance criterias",
  "categories": ["Azure Boards"],
  "demands": ["api-version/5.1"],
  "tags": ["acceptance criterias"],
  "scopes": ["vso.graph", "vso.work", "vso.project"],
  "icons": {
    "default": "extension-icon.png"
  },
  "content": {
    "details": { "path": "marketplace/docs/README.md" },
    "changelog": { "path": "marketplace/docs/CHANGELOG.md" }
  },
  "links": {
    "repository": {
      "uri": "https://github.com/joachimdalen/azdevops-acceptance-criterias"
    },
    "support": {
      "uri": "https://github.com/joachimdalen/azdevops-acceptance-criterias/issues"
    },
    "privacypolicy": {
      "uri": "https://github.com/joachimdalen/azdevops-acceptance-criterias/blob/master/PRIVACY.md"
    },
    "license": {
      "uri": "https://github.com/joachimdalen/azdevops-acceptance-criterias/blob/master/LICENSE"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/joachimdalen/azdevops-acceptance-criterias"
  },
  "branding": {
    "color": "#357205",
    "theme": "dark"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services.Cloud"
    }
  ],
  "files": [
    {
      "path": "dist/assets",
      "addressable": true
    }
  ],
  "screenshots": [
    { "path": "marketplace/docs/images/work-hub-preview.png" },
    { "path": "marketplace/docs/images/work-item-preview.png" },
    { "path": "marketplace/docs/images/panel-preview.png" }
  ],
  "contributions": [
    {
      "id": "criteria-panel",
      "type": "ms.vss-web.external-content",
      "targets": [],
      "properties": {
        "uri": "criteria-panel.html"
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.acceptance-criterias-dev.feature-enabled"
          }
        }
      ]
    },
    {
      "id": "confirmation-dialog",
      "type": "ms.vss-web.external-content",
      "targets": [],
      "properties": {
        "uri": "confirmation-dialog.html"
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.acceptance-criterias-dev.feature-enabled"
          }
        }
      ]
    },
    {
      "id": "admin-hub",
      "type": "ms.vss-web.hub",
      "description": "Configuration hub for Acceptance Criterias",
      "targets": ["ms.vss-web.project-admin-hub-group"],
      "properties": {
        "name": "Acceptance Criterias (DEV)",
        "order": 1,
        "uri": "admin-hub.html",
        "icon": {
          "light": "dist/assets/hub-icon-dark.png",
          "dark": "dist/assets/hub-icon-light.png"
        }
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.acceptance-criterias-dev.feature-enabled"
          }
        }
      ]
    },
    {
      "id": "criterias-control-page",
      "type": "ms.vss-work-web.work-item-form-page",
      "targets": ["ms.vss-work-web.work-item-form"],
      "properties": {
        "name": "Acceptance Criterias",
        "uri": "wi-control.html"
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.acceptance-criterias-dev.enabled-on-all-workitems"
          }
        }
      ]
    },
    {
      "id": "criterias-wi-control",
      "type": "ms.vss-work-web.work-item-form-control",
      "targets": ["ms.vss-work-web.work-item-form"],
      "description": "Control to manage acceptance criterias for a work item",
      "properties": {
        "name": "Work Item Acceptance Criterias (DEV)",
        "uri": "wi-control.html?isControl=true",
        "height": 500
      }
    },
    {
      "id": "criterias-progress-control",
      "type": "ms.vss-work-web.work-item-form-control",
      "targets": ["ms.vss-work-web.work-item-form"],
      "description": "Progressbar that shows the total progress of acceptance criterias",
      "properties": {
        "name": "Acceptance Criterias Progress",
        "uri": "progress-control.html"
      }
    },
    {
      "id": "feature-enabled",
      "type": "ms.vss-web.feature",
      "description": "Enables acceptance criteria user hub and admin hub",
      "targets": ["ms.vss-web.managed-features"],
      "properties": {
        "name": "Acceptance Criterias (DEV) - Hubs",
        "userConfigurable": false,
        "hostConfigurable": true,
        "hostScopes": ["project"],
        "links": {
          "learn": {
            "uri": "https://github.com/joachimdalen/azdevops-acceptance-criterias#post-install-activation"
          }
        }
      }
    },
    {
      "id": "enabled-on-all-workitems",
      "type": "ms.vss-web.feature",
      "description": "Enables acceptance criteria control on all work item types",
      "targets": ["ms.vss-web.managed-features"],
      "properties": {
        "name": "Acceptance Criterias (DEV) - Work item control",
        "userConfigurable": false,
        "hostConfigurable": true,
        "hostScopes": ["project"],
        "links": {
          "learn": {
            "uri": "https://github.com/joachimdalen/azdevops-acceptance-criterias#post-install-activation"
          }
        }
      }
    },
    {
      "id": "acceptance-hub",
      "type": "ms.vss-web.hub-group",
      "targets": ["ms.vss-web.project-hub-groups-collection"],
      "properties": {
        "name": "Acceptance Criterias (DEV)",
        "order": 3,
        "icon": {
          "light": "dist/assets/hub-group-icon.png",
          "dark": "dist/assets/hub-group-icon.png"
        }
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.acceptance-criterias-dev.feature-enabled"
          }
        }
      ]
    },
    {
      "id": "work-hub",
      "type": "ms.vss-web.hub",
      "targets": [".acceptance-hub"],
      "properties": {
        "name": "Criterias",
        "uri": "work-hub.html",
        "icon": {
          "light": "dist/assets/hub-icon-dark.png",
          "dark": "dist/assets/hub-icon-light.png"
        }
      },
      "constraints": [
        {
          "name": "Feature",
          "properties": {
            "featureId": "joachimdalen.acceptance-criterias-dev.feature-enabled"
          }
        }
      ]
    }
  ]
}
